%h1 Listing scenes

%table
  %thead
    %tr
      %th Name
      %th Content
      %th Movie
      %th
      %th

  %tbody
    - @scenes.each do |scene|
      %tr
        %td= scene.name
        %td= scene.content
        %td= link_to 'Show', [scene.movie, scene]
        %td= link_to 'Edit', edit_movie_scene_path(scene.movie, scene)
        %td= link_to 'Destroy', [scene.movie, scene], method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Scene', new_movie_scene_path(@movie)
\|
= link_to 'Back to Movie', movie_path(@movie)
