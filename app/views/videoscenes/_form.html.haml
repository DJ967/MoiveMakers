= form_for [@movie, @videoscene] do |f|
  - if @picturescene.errors.any?
    #error_explanation
      %h2= "#{pluralize(@videoscene.errors.count, "error")} prohibited this scene from being saved:"
      %ul
        - @videoscene.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Give_the_video_a_label
    (Like when the video shows in the Movie.)
    = f.text_field :name
  %span.picture
    = f.file_field :video, accept: 'video/mp4,video/mov,video/webm'
  .actions
    = f.submit "Add Picture", class: 'button'
:javascript
  $('#micropost_video').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 50000) {
      alert('Maximum file size is 50000MB. Please choose a smaller file.');
    }
  });
